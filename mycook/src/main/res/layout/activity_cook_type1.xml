<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ececec"
    android:orientation="vertical"
    tools:context="com.example.cook.CookType1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/sc_type1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_f1f1f1"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/rg_type1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </ScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_type1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:background="@color/c_ffffff"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
